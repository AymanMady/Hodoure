<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action pour le Dashboard -->
        <record id="hodoure_dashboard_action" model="ir.actions.client">
            <field name="name">Dashboard</field>
            <field name="tag">hodoure.dashboard</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu principal Dashboard -->
        <menuitem id="dashboard_menu_root" 
                  name="Dashboard" 
                  sequence="1"
                  web_icon="hodoure,static/description/icon.png"/>
        
        <!-- Sous-menu Dashboard -->
        <menuitem id="hodoure_dashboard_menu" 
                  name="Students Dashboard" 
                  parent="dashboard_menu_root" 
                  action="hodoure_dashboard_action"
                  sequence="10"/>
    </data>
</odoo>
