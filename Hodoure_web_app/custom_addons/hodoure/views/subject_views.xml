<odoo>
    <data>
    <record id="hodoure_subject_tree" model="ir.ui.view">
        <field name="name">subject.tree</field>
        <field name="model">hodoure.subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hodoure_subject_form" model="ir.ui.view">
        <field name="name">subject.form</field>
        <field name="model">hodoure.subject</field>
        <field name="arch" type="xml">
            <form string="Student" >
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <button name="action_save_subject"
                            string="Save"
                            type="object"
                            class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hodoure_subject_action" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">hodoure.subject</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="subject_menu_root" web_icon="hodoure,static/src/img/icons/subjects.png" name="Subjects"/>
    <menuitem id="hodoure_subject_menu" name="Subjects" parent="subject_menu_root" action="hodoure_subject_action"/>

    </data>
</odoo>