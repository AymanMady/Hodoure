<odoo>
    <data>
        <record id="hodoure_teacher_tree" model="ir.ui.view">
            <field name="name">teacher.tree</field>
            <field name="model">hodoure.teacher</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="password"/>
                    <field name="class_ids"/>
                </tree>
            </field>
        </record>

        <record id="hodoure_teacher_form" model="ir.ui.view">
            <field name="name">teacher.form</field>
            <field name="model">hodoure.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher" >
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="class_ids"/>
                        </group>
                        <button name="action_save_teacher"
                                string="Save"
                                type="object"
                                class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hodoure_teacher_action" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">hodoure.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="teacher_menu_root" web_icon="hodoure,static/src/img/icons/teachers.png" name="Teachers"/>
        <menuitem id="hodoure_teacher_menu" name="Teachers" parent="teacher_menu_root" action="hodoure_teacher_action"/>

    </data>
</odoo>