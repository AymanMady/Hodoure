<odoo>
    <data>
        <record id="hodoure_school_tree" model="ir.ui.view">
            <field name="name">school.tree</field>
            <field name="model">hodoure.school</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="telephone"/>
                </tree>
            </field>
        </record>

        <record id="hodoure_school_form" model="ir.ui.view">
            <field name="name">school.form</field>
            <field name="model">hodoure.school</field>
            <field name="arch" type="xml">
                <form string="Student" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="telephone"/>
                        </group>
                        <button name="action_save_school"
                                string="Save"
                                type="object"
                                class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hodoure_school_action" model="ir.actions.act_window">
            <field name="name">Schools</field>
            <field name="res_model">hodoure.school</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="school_menu_root" name="Schools"/>
        <menuitem id="hodoure_school_menu" name="Schools" parent="school_menu_root" action="hodoure_school_action"/>

    </data>
</odoo>